@using fcmMVCfirst.Models
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <title>@ViewBag.Title</title>
    <link href="@Url.Content("~/Content/Site.css")" rel="stylesheet" type="text/css" />
    <script src="@Url.Content("~/Scripts/jquery-1.5.1.min.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/modernizr-1.7.min.js")" type="text/javascript"></script>
    <img src="/Content/Images/mainpic.png" style="-moz-border-bottom-colors: blue">
</head>
<body>
    <div class="page">
        <header>
            <div id="title">
                <h1>Ngunnawal Child Care Center</h1>
            </div>
            <div id="logindisplay">
                @Html.Partial("_LogOnPartial")
            </div>
            <nav>
                <ul id="menu">
                    <li>@Html.ActionLink("Home", "Index", "Home")</li>
                    <li>@Html.ActionLink("About", "About", "Home")</li>
                    <li>@Html.ActionLink("Maintenance", "Index", "Maintenance")</li>

                    @if (SessionInfo.CheckIfUserHasRole("ADMIN") || SessionInfo.CheckIfUserHasRole("OFFICER"))
                    {
                        <li>@Html.ActionLink("Child", "Index", "Child", new { id = 0}, null)</li>
                        <li>@Html.ActionLink("Educator", "Index", "Educator")</li>
                        <li>@Html.ActionLink("Room", "Index", "RoomManagement")</li>
@*                        <li>@Html.ActionLink("Report", "Index", "ReportMetadata")</li>*@
                        @* syntax do html.actionlink (text, method, controller) *@
                    }               
                    </ul>
            </nav>
        </header>
        <section id="main">
            @RenderBody()
        </section>
        <footer>
        </footer>
    </div>
</body>
</html>
