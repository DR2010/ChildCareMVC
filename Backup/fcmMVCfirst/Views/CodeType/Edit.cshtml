@model MackkadoITFramework.ReferenceData.CodeType
           
@{
    ViewBag.Title = "Edit";
}

<h2>Edit</h2>

<script src="@Url.Content("~/Scripts/jquery.validate.min.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.min.js")" type="text/javascript"></script>

@using (Html.BeginForm()) {
    @Html.ValidationSummary(true)
    <fieldset>
        <legend>Code Type Edit</legend>

        <div class="editor-label">
            @Html.LabelFor(model => model.Code)
        </div>
        <div class="editor-field">
            @Html.TextBoxFor(model => model.Code, new { @readonly=true }) 
            @* @Html.DisplayFor(model => model.Code) *@
            @Html.ValidationMessageFor(model => model.Code)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.Description)
        </div>
        <div class="editor-field">
            @Html.TextBoxFor(model => model.Description, new { maxlength = "50", style = "width:500px;" })
            @Html.ValidationMessageFor(model => model.Description)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.ShortCodeType)
        </div>
        <div class="editor-field">
            @Html.TextBoxFor(model => model.ShortCodeType, new { maxlength = "3", style = "width:200px;" })
            @Html.ValidationMessageFor(model => model.ShortCodeType)
        </div>

        <p>
            <input type="submit" value="Save" />
        </p>
    </fieldset>
    
    @Html.ValidationSummary()
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>
